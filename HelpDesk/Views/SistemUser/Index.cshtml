@model IEnumerable<HelpDesk.Models.SistemUser>

@{
    ViewBag.titulo = "Usuarios";
}

<h1 class="text-center">@ViewBag.titulo</h1>

<i class="fas fa-plus-square"></i>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th class="bg-light">
                <label>Id</label>
            </th>
            <th class="bg-light">
                <label>Nombre</label>
            </th>
            <th class="bg-light">
                <label>Apellido</label>
            </th>
            <th class="bg-light">
                <label>Usuario</label>
            </th>
            <th class="bg-light">
                <label>Password</label>
            </th>
            <th class="bg-light">
                <label>Fecha de Nacimiento</label>
            </th>
            <th class="bg-light">
                <label>Accines</label>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Usuarioid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleadoid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nikname)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NivelUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ @class = "fas fa - plus - square" })
                </td>
            </tr>
        }
    </tbody>
</table>
